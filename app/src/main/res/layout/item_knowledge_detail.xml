<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_knowledge_tip_translate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:foreground="@drawable/translucence_clickable_view"
        android:paddingStart="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_12"
        android:visibility="visible"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:background="@color/home_record_bg">

            <ImageView
                android:id="@+id/iv_translate"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_margin="@dimen/dp_15"
                android:src="@drawable/icon_googletranslate"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_translate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:fontFamily="@font/assistant_bold"
                android:gravity="start"
                android:lines="1"
                android:text="@string/translate_to_x_via_google"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:autoSizeMaxTextSize="@dimen/sp_12"
                app:autoSizeMinTextSize="@dimen/sp_10"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/iv_translate"
                app:layout_constraintEnd_toStartOf="@+id/iv_chevron_translate"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/iv_translate"
                app:layout_constraintTop_toTopOf="@+id/iv_translate" />

            <ImageView
                android:id="@+id/iv_chevron_translate"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_15"
                android:src="@drawable/icon_general_chevron"
                app:layout_constraintBottom_toBottomOf="@+id/iv_translate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_translate"
                app:tint="@color/gray_aa" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_knowledge_tip_english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:foreground="@drawable/translucence_clickable_view"
        android:paddingStart="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_12"
        android:visibility="visible"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_65"
            android:background="@color/home_record_bg">

            <ImageView
                android:id="@+id/iv_english"
                android:layout_width="@dimen/dp_34"
                android:layout_height="@dimen/dp_34"
                android:layout_margin="@dimen/dp_15"
                android:src="@drawable/icon_googletranslate"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:fontFamily="@font/assistant_bold"
                android:gravity="start"
                android:lines="1"
                android:text="@string/translate_by_google"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:autoSizeMaxTextSize="@dimen/sp_12"
                app:autoSizeMinTextSize="@dimen/sp_10"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@+id/iv_chevron_english"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/iv_english"
                app:layout_constraintTop_toTopOf="@+id/iv_english" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:fontFamily="@font/assistant_regular"
                android:gravity="end"
                android:lines="1"
                android:text="@string/view_original_version_english"
                android:textColor="@color/white_70"
                android:textSize="@dimen/sp_12"
                app:autoSizeMaxTextSize="@dimen/sp_12"
                app:autoSizeMinTextSize="@dimen/sp_10"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/iv_english"
                app:layout_constraintEnd_toStartOf="@+id/iv_chevron_english"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@+id/iv_english" />

            <ImageView
                android:id="@+id/iv_chevron_english"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_15"
                android:src="@drawable/icon_general_chevron"
                app:layout_constraintBottom_toBottomOf="@+id/iv_english"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@color/gray_aa" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <com.example.bloodpressure.views.RadiusCardView
        android:id="@+id/rcv_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:foreground="@color/home_record_bg"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:topLeftRadius="@dimen/dp_10"
        app:topRightRadius="@dimen/dp_10" />

    <com.example.bloodpressure.views.RadiusCardView
        android:id="@+id/rcv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:topLeftRadius="@dimen/dp_10"
        app:topRightRadius="@dimen/dp_10">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/home_record_bg"
            android:paddingStart="@dimen/dp_12"
            android:paddingEnd="@dimen/dp_12">

            <TextView
                android:id="@+id/ac_tv_condition"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/home_record_bg"
                android:fontFamily="@font/assistant_bold"
                android:paddingTop="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_15"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_27"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.example.bloodpressure.views.RadiusCardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_content_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.bloodpressure.views.RadiusCardView
            android:id="@+id/rcv_last_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:foreground="@color/home_record_bg"
            app:bottomLeftRadius="@dimen/dp_10"
            app:bottomRightRadius="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="parent" />

        <Space
            android:id="@+id/s_content_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@+id/rcv_last_bottom" />

        <com.example.bloodpressure.views.RadiusCardView
            android:id="@+id/rcv_content_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:foreground="@color/home_record_bg"
            app:layout_constraintTop_toBottomOf="@+id/s_content_1"
            app:topLeftRadius="@dimen/dp_10"
            app:topRightRadius="@dimen/dp_10" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/home_record_bg"
            android:paddingStart="@dimen/dp_12"
            android:paddingEnd="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rcv_content_1">

            <View
                android:id="@+id/v_bold_content_1_left"
                android:layout_width="@dimen/dp_4"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="@color/btn_bg"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/tv_bold_content_1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_bold_content_1"
                app:layout_constraintTop_toTopOf="@+id/tv_bold_content_1" />

            <View
                android:id="@+id/v_bold_content_1_right"
                android:layout_width="@dimen/dp_4"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="@color/btn_bg"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/tv_bold_content_1"
                app:layout_constraintLeft_toRightOf="@+id/tv_bold_content_1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_bold_content_1" />

            <TextView
                android:id="@+id/tv_bold_content_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_10"
                android:fontFamily="@font/assistant_extra_bold"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_24"
                app:layout_constraintLeft_toRightOf="@+id/v_bold_content_1_left"
                app:layout_constraintRight_toLeftOf="@+id/v_bold_content_1_right"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_bold_content_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/home_record_bg"
        android:fontFamily="@font/assistant_extra_bold"
        android:paddingStart="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_12"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_24"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_bold_content_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/home_record_bg"
        android:fontFamily="@font/assistant_extra_bold"
        android:paddingStart="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_12"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/home_record_bg"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/home_record_bg"
        android:fontFamily="@font/assistant_regular"
        android:paddingStart="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_12"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.bloodpressure.views.RadiusCardView
            android:id="@+id/rcv_rv_last_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:foreground="@color/home_record_bg"
            app:bottomLeftRadius="@dimen/dp_10"
            app:bottomRightRadius="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="parent" />

        <Space
            android:id="@+id/s_rv_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@+id/rcv_rv_last_top" />

        <com.example.bloodpressure.views.RadiusCardView
            android:id="@+id/rcv_rv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:foreground="@color/home_record_bg"
            app:layout_constraintTop_toBottomOf="@+id/s_rv_1"
            app:topLeftRadius="@dimen/dp_10"
            app:topRightRadius="@dimen/dp_10" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/home_record_bg"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_12"
            android:paddingEnd="@dimen/dp_12"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/rcv_rv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/v_newline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/home_record_bg"
        android:paddingStart="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_12"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_newline_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.bloodpressure.views.RadiusCardView
            android:id="@+id/rcv_last_content_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:foreground="@color/home_record_bg"
            app:bottomLeftRadius="@dimen/dp_10"
            app:bottomRightRadius="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.bloodpressure.views.RadiusCardView
            android:id="@+id/rcv_newline_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:foreground="@color/home_record_bg"
            app:layout_constraintTop_toBottomOf="@+id/rcv_last_content_bottom"
            app:topLeftRadius="@dimen/dp_10"
            app:topRightRadius="@dimen/dp_10" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/home_record_bg"
            android:paddingStart="@dimen/dp_12"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rcv_newline_content">

            <TextView
                android:id="@+id/tv_newline_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/home_record_bg"
                android:fontFamily="@font/assistant_regular"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
