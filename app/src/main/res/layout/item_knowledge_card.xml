<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_15">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_knowledge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:elevation="1dp"
        android:foreground="@drawable/translucence_clickable_view"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_knowledge_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100">

            <androidx.appcompat.widget.AppCompatImageView
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/ac_iv_knowledge"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_100"
                android:adjustViewBounds="true"
                android:scaleType="fitEnd"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ac_tv_knowledge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_15"
                android:fontFamily="@font/assistant_bold"
                android:lineSpacingMultiplier="0.8"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_22"
                app:autoSizeMaxTextSize="@dimen/sp_22"
                app:autoSizeMinTextSize="@dimen/sp_10"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ac_iv_knowledge"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
