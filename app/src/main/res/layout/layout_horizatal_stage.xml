<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/healthGoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_margin="2dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:src="@drawable/icon_hypotension"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn2"
        app:layout_constraintTop_toBottomOf="@id/healthGoals" />

    <ImageView
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_margin="2dp"
        android:adjustViewBounds="true"
        android:background="@color/stage_normal_top"
        android:contentDescription="@null"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toRightOf="@id/btn1"
        app:layout_constraintRight_toLeftOf="@id/btn3"
        app:layout_constraintTop_toBottomOf="@id/healthGoals" />

    <ImageView
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_margin="2dp"
        android:adjustViewBounds="true"
        android:background="@color/stage_elevated_top"
        android:contentDescription="@null"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toRightOf="@id/btn2"
        app:layout_constraintRight_toLeftOf="@id/btn4"
        app:layout_constraintTop_toBottomOf="@id/healthGoals" />

    <ImageView
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_margin="2dp"
        android:adjustViewBounds="true"
        android:background="@color/stage_hypotension_1_top"
        android:contentDescription="@null"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toRightOf="@id/btn3"
        app:layout_constraintRight_toLeftOf="@id/btn5"
        app:layout_constraintTop_toBottomOf="@id/healthGoals" />

    <ImageView
        android:id="@+id/btn5"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_margin="2dp"
        android:background="@color/stage_hypotension_2_top"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toRightOf="@id/btn4"
        app:layout_constraintRight_toLeftOf="@id/btn6"
        app:layout_constraintTop_toBottomOf="@id/healthGoals" />

    <ImageView
        android:id="@+id/btn6"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_margin="2dp"
        android:adjustViewBounds="true"
        android:background="@color/stage_hypotensive_top"
        android:contentDescription="@null"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/btn5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/healthGoals" />

</androidx.constraintlayout.widget.ConstraintLayout>