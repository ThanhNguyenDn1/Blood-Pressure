<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="@dimen/cm_dp_13"
        android:layout_margin="2dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:contentDescription="@null"
        android:focusable="true"
        android:src="@drawable/hypotension_selecter"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/view2"
        app:layout_constraintTop_toBottomOf="@id/triangle1" />

    <ImageView
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="@dimen/cm_dp_13"
        android:layout_margin="2dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:contentDescription="@null"
        android:focusable="true"
        android:src="@drawable/normal_selecter"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toRightOf="@id/view1"
        app:layout_constraintRight_toLeftOf="@id/view3"
        app:layout_constraintTop_toBottomOf="@id/triangle2" />

    <ImageView
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="@dimen/cm_dp_13"
        android:layout_margin="2dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:contentDescription="@null"
        android:focusable="true"
        android:src="@drawable/elevated_selecter"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toRightOf="@id/view2"
        app:layout_constraintRight_toLeftOf="@id/view4"
        app:layout_constraintTop_toBottomOf="@id/triangle3" />

    <ImageView
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="@dimen/cm_dp_13"
        android:layout_margin="2dp"
        android:adjustViewBounds="true"
        android:background="@drawable/hypertension_stage_1_selecter"
        android:clickable="true"
        android:contentDescription="@null"
        android:focusable="true"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toRightOf="@id/view3"
        app:layout_constraintRight_toLeftOf="@id/view5"
        app:layout_constraintTop_toBottomOf="@id/triangle4" />

    <ImageView
        android:id="@+id/view5"
        android:layout_width="0dp"
        android:layout_height="@dimen/cm_dp_13"
        android:layout_margin="2dp"
        android:adjustViewBounds="true"
        android:background="@drawable/hypertension_stage_2_selecter"
        android:clickable="true"
        android:contentDescription="@null"
        android:focusable="true"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toRightOf="@id/view4"
        app:layout_constraintRight_toLeftOf="@id/view6"
        app:layout_constraintTop_toBottomOf="@id/triangle5" />

    <ImageView
        android:id="@+id/view6"
        android:layout_width="0dp"
        android:layout_height="@dimen/cm_dp_13"
        android:layout_margin="2dp"
        android:adjustViewBounds="true"
        android:background="@drawable/hypertensive_selecter"
        android:clickable="true"
        android:contentDescription="@null"
        android:focusable="true"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/view5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/triangle6" />


    <ImageView
        android:id="@+id/triangle1"
        android:layout_width="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:contentDescription="@null"
        android:focusable="true"
        android:src="@drawable/triangle"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@id/view1"
        app:layout_constraintRight_toRightOf="@id/view1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/triangle2"
        android:layout_width="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:src="@drawable/triangle"
        app:layout_constraintLeft_toLeftOf="@id/view2"
        app:layout_constraintRight_toRightOf="@id/view2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/triangle3"
        android:layout_width="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:src="@drawable/triangle"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@id/view3"
        app:layout_constraintRight_toRightOf="@id/view3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/triangle4"
        android:layout_width="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:src="@drawable/triangle"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@id/view4"
        app:layout_constraintRight_toRightOf="@id/view4"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/triangle5"
        android:layout_width="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:src="@drawable/triangle"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@id/view5"
        app:layout_constraintRight_toRightOf="@id/view5"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/triangle6"
        android:layout_width="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:src="@drawable/triangle"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@id/view6"
        app:layout_constraintRight_toRightOf="@id/view6"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>